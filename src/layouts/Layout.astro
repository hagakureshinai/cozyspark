---
// src/layouts/Layout.astro
interface Props {
	title: string;
    showNavigation?: boolean;
    isFullHeight?: boolean; // 高さいっぱいに使うページ用フラグ
	narrow?: boolean; // コンテンツ幅を狭くするオプション
}
const { title, showNavigation = true, isFullHeight = false, narrow = false } = Astro.props;
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");

// ★ GA4のトラッキングコード
const ga4TrackingCode = `
<script async src="https://www.googletagmanager.com/gtag/js?id=G-2FT5C8E7Y8"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-2FT5C8E7Y8');
</script>
`;
---
<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<Fragment set:html={ga4TrackingCode} />
	</head>
	<body>
        {showNavigation && (
            <header class="site-header">
                <div class="header-container">
                    <a href={`${baseUrl}/`} class="site-logo">Cozy Spark</a>
                    <nav class="site-nav">
                        <a href={`${baseUrl}/works/`}>作品一覧へ戻る</a>
                    </nav>
                </div>
            </header>
        )}

        <main class:list={[
			"content-area", 
			{ "is-full-height": isFullHeight, "is-narrow": narrow }
		]}>
            <slot />
        </main>

        {showNavigation && (
            <footer class="site-footer">
				<a href={`${baseUrl}/policy/`} class="footer-link">サイトポリシー</a>
                <p>&copy; Cozy Spark</p>
            </footer>
        )}
	</body>
</html>

<style is:global>
	:root {
		--bg-color: #fdfdfd;
		--text-color: #333;
		--accent-color: #888;
		--link-color: #A03A3A;
		--container-max-width: 1000px; /* デフォルト値 */
		--side-padding: 1.5rem; /* 左右の最低余白を定義 */
	}
	
	/* ★重要：すべての要素の計算方法を「余白を含める」に統一 */
    *, *::before, *::after {
        box-sizing: border-box;
    }

	html {
		font-family: "Yu Mincho", "YuMincho", "Hiragino Mincho ProN", serif;
		background: var(--bg-color);
		color: var(--text-color);
	}

	body {
		margin: 0;
		padding: 0;
	}

	/* --- サイト全体のリンクの基本ルール --- */
	a {
		color: var(--link-color); /* ★最初からこの色にする */
		text-decoration: none;
		transition: opacity 0.2s ease; /* 色の変化ではなく、ふわっとさせる演出用 */
	}

	a:hover {
		opacity: 0.7; /* ★マウスを乗せた時に少し薄くして「反応」を示す */
		text-decoration: underline; /* ホバー時のみ下線を出す（お好みで削除可） */
	}

	/* isFullHeight=true の時、画面中央に配置*/
    .content-area.is-full-height {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 2rem; /* paddingの重複定義を避け、ここで完結させる */
    }

	/* narrow=true の時の「器」の制御 */
    .content-area.is-narrow {
        max-width: 700px;
        padding-top: 4rem; /* 404で必要だった余白をレイアウト側で定義 */
    }

	/* ヘッダーのスタイル */
	.site-header {
		padding: 1rem 0; /* 少しスリムに調整 */
		border-bottom: 1px solid #eee;
		/* ★追加：上部に固定 */
		position: sticky;
		top: 0;
		z-index: 100;
		background: rgba(253, 253, 253, 0.75); /* var(--bg-color)を少し透過 */
		-webkit-backdrop-filter: blur(8px);
		backdrop-filter: blur(8px); /* 背景をぼかして上品に（Safari等対応） */
	}

	.header-container {
		max-width: var(--container-max-width); /* 固定値をやめ、共通の変数を使用 */
		margin: 0 auto;
		padding: 0 var(--side-padding); /* 変数を使用 */
		display: flex;
		justify-content: space-between;
		align-items: center;
		/* gap: 1rem; スマホで要素が詰まった時に折り返さない、または調整しやすくする */
	}

	.site-logo {
		font-size: 1.2rem;
		text-decoration: none;
		color: var(--text-color);
		letter-spacing: 0.1rem;
		font-weight: normal;
	}

	.site-nav a {
		font-size: 0.9rem;
		text-decoration: none;
		color: var(--accent-color);
	}

	.site-nav a:hover {
		text-decoration: underline;
	}

	/* フッターのスタイル */
	.site-footer {
		text-align: center;
		padding: 2rem 0 2rem;
		font-size: 0.8rem;
		color: var(--accent-color);
	}

    /* フッター内のリンクとコピーライトを中央揃えで配置 */
    .footer-links {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem; /* 要素間のスペース */
        max-width: 700px;
        margin: 0 auto;
    }

    .footer-link {
        color: var(--accent-color);
        text-decoration: none;
        font-size: 0.8rem;
    }

    .footer-link:hover {
        text-decoration: underline;
    }

    .site-footer p {
        margin: 0; /* pタグのデフォルトマージンをリセット */
    }

	/* --- コンテンツ本文表示のための基本レイアウト設定 --- */
	.content-area { 
		/* レイアウト責務の定義 */
		max-width: var(--container-max-width);; /* ページ全体の横幅制御 */
		margin: 0 auto; /* センタリング指定 */
		padding: 1rem var(--side-padding) 2rem; /* 左右余白を変数にし、スマホでも確保 */
		width: 100%; /* 横幅が100%を超えないように強制 */
        /* box-sizing: border-box; */
	}

	/* narrow=true（404ページなど）の時の「器」の制御 */
    .content-area.is-narrow {
        max-width: 700px; /* ここは「あえて狭くしたい」ページ用なので固定値、あるいは 700px 等で維持 */
        padding-top: 4rem;
    }

	/* スマホ表示（幅768px以下）での調整 */
    @media (max-width: 768px) {
        :root {
            --side-padding: 1rem; /* スマホでは余白を少し狭くして本文幅を確保 */
        }
        .header-container {
            /* ロゴとメニューを縦に並べたい、もしくは文字を小さくしたい場合はここで調整します */
            /* 現状はシンプルなので維持でもOK */
        }

</style>