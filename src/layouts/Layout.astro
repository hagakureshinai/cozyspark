---
// src/layouts/Layout.astro
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
	title: string;
	description?: string; // ★ descriptionを追加（任意）
	ogImage?: string; // ★ 個別に画像を指定したい場合用
	showNavigation?: boolean;
	isFullHeight?: boolean; // 高さいっぱいに使うページ用フラグ
	narrow?: boolean; // コンテンツ幅を狭くするオプション
}

const {
	title,
	description = "Cozy Spark - 一次創作BL小説サイト", // ★ デフォルトの文章
	ogImage = "/assets/img/ogp.png", // ★ デフォルトのOGP画像パス
	showNavigation = true,
	isFullHeight = false,
	narrow = false,
} = Astro.props;

const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
const siteName = "Cozy Spark";

// ★ タイトルの形式を「ページタイトル | サイト名」にする
// すでにタイトルにサイト名が含まれている場合は重ねない処理
const formattedTitle = title.includes(siteName)
	? title
	: `${title} | ${siteName}`;

// ★予備URLを自分のドメインにする
const siteOrigin = Astro.site
	? Astro.site.origin
	: "https://hagakureshinai.github.io";

// ★正規URLの組み立て
// Astro.url.pathname には /cozyspark が含まれているので siteOrigin と合体させる
const canonicalURL = new URL(Astro.url.pathname, siteOrigin);

// ★OGP画像の絶対URL
// 外部サービス（Xなど）が読み込めるように、baseを含めたフルパスを作る
const socialImageURL = new URL(baseUrl + ogImage, siteOrigin);

// ★ GA4のトラッキングコード
const ga4TrackingCode = `
<script async src="https://www.googletagmanager.com/gtag/js?id=G-2FT5C8E7Y8"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-2FT5C8E7Y8');
</script>
`;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />

		<!-- Favicon設定 -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/x-icon" href={`${baseUrl}/favicon.ico`} />
		<link rel="apple-touch-icon" href={`${baseUrl}/apple-touch-icon.png`} />

		<!-- 基本SEO -->
		<title>{formattedTitle}</title>
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalURL} />

		<!-- OGP (Open Graph Protocol) -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={formattedTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={socialImageURL} />

		<!-- X (Twitter) Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={formattedTitle} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={socialImageURL} />

		<Fragment set:html={ga4TrackingCode} />
	</head>
	<body>
		{showNavigation && <Header />}

		<main
			class:list={[
				"content-area",
				{ "is-full-height": isFullHeight, "is-narrow": narrow },
			]}
		>
			<slot />
		</main>

		{showNavigation && <Footer />}
	</body>
</html>

<style>
	/* --- コンテンツ本文表示のための基本レイアウト設定 --- */
	.content-area {
		/* レイアウト責務の定義 */
		max-width: var(--container-max-width); /* ページ全体の横幅制御 */
		margin: 0 auto; /* センタリング指定 */
		padding: 1rem var(--side-padding) 2rem; /* 左右余白を変数にし、スマホでも確保 */
		width: 100%; /* 横幅が100%を超えないように強制 */
	}

	/* isFullHeight=true の時、画面中央に配置*/
	.content-area.is-full-height {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-height: 100vh;
		padding: 2rem; /* paddingの重複定義を避け、ここで完結させる */
	}

	/* narrow=true の時の「器」の制御 */
	.content-area.is-narrow {
		max-width: 700px;
		padding-top: 4rem; /* 404で必要だった余白をレイアウト側で定義 */
	}
</style>
