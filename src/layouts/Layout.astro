---
// src/layouts/Layout.astro
interface Props {
	title: string;
    showNavigation?: boolean;
}
const { title, showNavigation = true } = Astro.props;
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
---
<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
        {showNavigation && (
            <header class="site-header">
                <div class="header-container">
                    <a href={`${baseUrl}/`} class="site-logo">Cozy Spark</a>
                    <nav class="site-nav">
                        <a href={`${baseUrl}/works/`}>Works</a>
                    </nav>
                </div>
            </header>
        )}

        <main class="novel-content">
            <slot /> <!-- ここに各ページの内容が入ります -->
        </main>

        {showNavigation && (
            <footer class="site-footer">
				<a href={`${baseUrl}/policy/`} class="footer-link">Policy</a>
                <p>&copy; Cozy Spark</p>
            </footer>
        )}
	</body>
</html>

<style is:global>
	:root {
		--bg-color: #fdfdfd;
		--text-color: #333;
		--accent-color: #888;
	}
	html {
		font-family: "Yu Mincho", "YuMincho", "Hiragino Mincho ProN", serif;
		background: var(--bg-color);
		color: var(--text-color);
	}
	body {
		margin: 0;
		padding: 0;
	}

	/* ヘッダーのスタイル */
	.site-header {
		padding: 1.5rem 0;
		border-bottom: 1px solid #eee;
		margin-bottom: 2rem;
	}
	.header-container {
		max-width: 700px;
		margin: 0 auto;
		padding: 0 1.5rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.site-logo {
		font-size: 1.2rem;
		text-decoration: none;
		color: var(--text-color);
		letter-spacing: 0.1rem;
		font-weight: normal;
	}
	.site-nav a {
		font-size: 0.9rem;
		text-decoration: none;
		color: var(--accent-color);
	}
	.site-nav a:hover {
		text-decoration: underline;
	}

	/* フッターのスタイル */
	.site-footer {
		text-align: center;
		padding: 4rem 0 2rem;
		font-size: 0.8rem;
		color: var(--accent-color);
	}
    /* フッター内のリンクとコピーライトを中央揃えで配置 */
    .footer-links {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem; /* 要素間のスペース */
        max-width: 700px;
        margin: 0 auto;
    }
    .footer-link {
        color: var(--accent-color);
        text-decoration: none;
        font-size: 0.8rem;
    }
    .footer-link:hover {
        text-decoration: underline;
    }
    .site-footer p {
        margin: 0; /* pタグのデフォルトマージンをリセット */
    }

	/* --- 小説本文表示のための基本レイアウト設定 --- */
	.novel-content {
		/* 行長の設定（最大幅を700pxに制限し、PCでの読みやすさを確保） */
		max-width: 700px;
		margin: 0 auto;
		/* スマホ対応：左右に余白を設定（header-containerのpaddingと同じ） */
		padding: 0 1.5rem; 
	}

	.novel-content p {
		/* 行間を広めに設定（要件：行間・段落間は広めに確保） */
		line-height: 2.0;
		
		/* 段落間を設定（行間と同じ2.0emに設定するとバランスが取りやすい） */
		margin-top: 0;
		margin-bottom: 2.0em;
		
		/* 行頭字下げ（要件：行頭字下げ（全角スペース）あり） */
		text-indent: 1em; 
	}

	/* 見出し（h2, h3など）の直後の段落は字下げをしないのが一般的な組版ルール */
	.novel-content h2 + p,
	.novel-content h3 + p {
		text-indent: 0;
	}
</style>