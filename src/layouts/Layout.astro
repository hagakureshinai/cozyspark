---
// src/layouts/Layout.astro
interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot /> <!-- ここに各ページの内容が入ります -->
	</body>
</html>

<style is:global>
  /* サイト全体に適用する設定 */
	:root {
		--bg-color: #fdfdfd;
		--text-color: #333;
		--accent-color: #888;
	}
	html {
		font-family: "Yu Mincho", "YuMincho", "Hiragino Mincho ProN", serif; /* 基本は明朝体 */
		background: var(--bg-color);
		color: var(--text-color);
	}
	body {
		margin: 0;
		padding: 0;
	}
</style>