---
// src/pages/works/[id].astro (エラー回避版)
import { getCollection, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const works = await getCollection('works');
  return works.map(work => ({
    // getSlug関数を使わず、直接 replace を書くことでエラーを回避
    params: { id: work.id.replace(/\.[^/.]+$/, "") },
    props: { work },
  }));
}

const { work } = Astro.props;
const { Content } = await render(work);

// エピソードを取得
const allEpisodes = await getCollection('episodes');

// IDから拡張子を消す処理（表示部分用）
const cleanId = (id: string) => id.replace(/\.[^/.]+$/, "");

const workEpisodes = allEpisodes
  .filter(ep => cleanId(ep.data.workId) === cleanId(work.id))
  .sort((a, b) => a.data.order - b.data.order);

const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<Layout title={`${work.data.title} - Cozy Spark`}>
  <main class="container">
    <header class="work-header">
      <nav>
        <a href={`${baseUrl}/works/`}>← Works</a>
      </nav>
      <h1>{work.data.title}</h1>
      <div class="status-tags">
        <span class="category-tag">{work.data.category}</span>
        {work.data.status === 'ongoing' ? 
          <span class="status-ongoing">連載中</span> : 
          <span class="status-completed">完結</span>
        }
      </div>
    </header>

    <section class="work-description">
      <Content />
    </section>

    <section class="episode-list">
      <h2>Index</h2>
      {workEpisodes.length > 0 ? (
        <ul>
          {workEpisodes.map(ep => (
            <li>
              <a href={`${baseUrl}/episodes/${cleanId(ep.id)}/`}>
                <span class="ep-title">{ep.data.title}</span>
                {ep.data.pubDate && (
                  <span class="ep-date">
                    {ep.data.pubDate.toLocaleDateString('ja-JP')}
                  </span>
                )}
              </a>
            </li>
          ))}
        </ul>
      ) : (
        <p>準備中...</p>
      )}
    </section>
  </main>
</Layout>


<style>
  .container {
    max-width: 700px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }
  .work-header {
    margin-bottom: 2rem;
  }
  h1 {
    font-size: 2rem;
    margin: 0.5rem 0;
    font-weight: normal;
  }
  .status-tags {
    display: flex;
    gap: 0.5rem;
    font-size: 0.8rem;
    color: var(--accent-color);
  }
  .work-description {
    line-height: 1.8;
    margin-bottom: 3rem;
    border-bottom: 1px dashed #ccc;
    padding-bottom: 2rem;
  }
  .episode-list h2 {
    font-size: 1.2rem;
    font-weight: normal;
    color: var(--accent-color);
    margin-bottom: 1rem;
  }
  .episode-list ul {
    list-style: none;
    padding: 0;
  }
  .episode-list li {
    padding: 0.8rem 0;
    border-bottom: 1px solid #eee;
  }
  .episode-list a {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--text-color);
    text-decoration: none;
  }
  .episode-list a:hover .ep-title {
    text-decoration: underline;
  }
  .ep-date {
    font-size: 0.8rem;
    color: #999;
  }
</style>