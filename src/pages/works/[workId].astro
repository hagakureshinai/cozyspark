---
// src/pages/works/[workId].astro
import { getCollection, render } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import NovelViewer from "../../components/NovelViewer.astro";

export async function getStaticPaths() {
  const allWorks = await getCollection("works");
  const allEpisodes = await getCollection("episodes");

  // IDから拡張子を除くヘルパー関数
  const cleanId = (id: string) =>
    id
      .split("/")
      .pop()
      ?.replace(/\.[^/.]+$/, "") || id;

  return allWorks.map((work) => {
    const workSlug = cleanId(work.id);

    // 作品内のエピソードを抽出
    const workEpisodes = allEpisodes
      .filter((episode) => {
        return episode.data.workId === workSlug;
      })
      .sort((a, b) => a.data.order - b.data.order);

    return {
      params: { workId: workSlug },
      props: {
        work,
        episodes: workEpisodes,
        firstEpisode: workEpisodes.length > 0 ? workEpisodes[0] : null,
      },
    };
  });
}

const { work, episodes, firstEpisode } = Astro.props;
const isShortStory = work.data.isShort;

let Content = null;
if (isShortStory && firstEpisode) {
  const rendered = await render(firstEpisode);
  Content = rendered.Content;
}

const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
const cleanId = (id: string) =>
  id
    .split("/")
    .pop()
    ?.replace(/\.[^/.]+$/, "") || id;

// 最新エピソードのIDを取得
let latestEpisodeId: string | null = null;
if (episodes.length > 0) {
  latestEpisodeId = cleanId(episodes[episodes.length - 1].id);
}

const shouldShowWorkUpdateBadge = work.data.isUpdated;

// SEO設定
const pageTitle = isShortStory
  ? work.data.title
  : `${work.data.title} 作品詳細・目次`;

const pageDescription = work.data.description
  ? work.data.description.substring(0, 120)
  : `${work.data.title}の作品情報とエピソード一覧のページです。`;

const categoryNames = {
  series: "観測者シリーズ",
  single: "単発作品",
  ss: "掌編小説",
};

const workBasePath = `${baseUrl}/works/${cleanId(work.id)}`;
---

{
  /* 
    短編の場合 (isShortStory): 
      ヘッダーは幅広(1000px)で表示したいので Layout narrow={false}
      本文(NovelViewer)だけ個別に幅制御する
    シリーズの場合: 
      目次なので Layout narrow={false}
*/
}
<Layout title={pageTitle} description={pageDescription} narrow={false}>
  {
    isShortStory && Content ? (
      /* --- 短編・掌編の場合 --- */
      <div class="work-detail-content">
        <header class="work-header">
          <h1 class="work-title-large">{work.data.title}</h1>

          {work.data.description && (
            <p class="work-description">{work.data.description}</p>
          )}

          <div class="work-meta">
            <span class="category">{categoryNames[work.data.category]}</span>
            <span class="badge-completed">完結済</span>
            {work.data.lastUpdated && (
              <time class="work-date">
                最終更新：
                {work.data.lastUpdated
                  .toLocaleDateString("ja-JP", {
                    year: "numeric",
                    month: "2-digit",
                    day: "2-digit",
                  })
                  .replace(/\//g, ".")}
              </time>
            )}
          </div>
        </header>

        {/* 本文部分だけを幅700pxに制限して中央揃えにする */}
        <div class="short-story-wrapper">
          <NovelViewer
            title={firstEpisode!.data.title}
            workTitle=""
            workLink="#"
            indexLink={`${baseUrl}/works/`}
            isShortStory={true}
          >
            <Content />
          </NovelViewer>
        </div>
      </div>
    ) : (
      /* --- シリーズ作品（目次）の場合 --- */
      <div class="work-detail-content">
        <header class="work-header">
          <h1 class="work-title-large">{work.data.title}</h1>

          {work.data.description && (
            <p class="work-description">{work.data.description}</p>
          )}

          <div class="work-meta">
            <span class="category">{categoryNames[work.data.category]}</span>
            {work.data.status === "ongoing" ? (
              <span class="badge-ongoing">連載中</span>
            ) : (
              <span class="badge-completed">完結済</span>
            )}

            {work.data.lastUpdated && (
              <time class="work-date">
                最終更新：
                {work.data.lastUpdated
                  .toLocaleDateString("ja-JP", {
                    year: "numeric",
                    month: "2-digit",
                    day: "2-digit",
                  })
                  .replace(/\//g, ".")}
              </time>
            )}
          </div>
        </header>

        <section class="episode-list-section">
          <h2 class="section-title">目次</h2>
          <ul class="episode-list">
            {episodes.map((episode) => {
              const episodeId = cleanId(episode.id);
              const isLatestAndUpdated =
                shouldShowWorkUpdateBadge && episodeId === latestEpisodeId;

              return (
                <li>
                  <a href={`${workBasePath}/${episodeId}/`}>
                    <div class="episode-info-container">
                      <div class="episode-main">
                        <span class="title">{episode.data.title}</span>
                        {isLatestAndUpdated && (
                          <span class="badge-updated">UP</span>
                        )}
                      </div>

                      {(episode.data.wordCount || episode.data.description) && (
                        <div class="episode-details">
                          {episode.data.wordCount && (
                            <span class="word-count">
                              {episode.data.wordCount}
                            </span>
                          )}
                          {episode.data.description && (
                            <span class="episode-description">
                              {episode.data.description}
                            </span>
                          )}
                        </div>
                      )}
                    </div>
                  </a>
                </li>
              );
            })}
          </ul>
          {episodes.length === 0 && <p>エピソードはまだありません。</p>}
        </section>
      </div>
    )
  }
</Layout>

<style>
  /* --- 作品ヘッダーエリア（共通） --- */
  .work-header {
    margin-bottom: 3rem;
    border-bottom: 1px solid #eee;
    padding-bottom: 2rem;
  }
  .work-title-large {
    font-size: 2rem;
    font-weight: normal;
    margin-bottom: 1rem;
  }
  .work-description {
    margin-bottom: 1.5rem;
    line-height: 1.6;
    color: #444;
  }
  .work-meta {
    font-size: 0.9rem;
    color: #888;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.8rem;
  }

  /* 作品ステータスバッジ */
  .badge-ongoing,
  .badge-completed {
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
  }
  .badge-ongoing {
    background: #4f8fa8;
    color: #fff;
  }
  .badge-completed {
    background: #7faf8f;
    color: #fff;
  }

  /* --- 目次リストエリア --- */
  .section-title {
    font-size: 1.2rem;
    font-weight: normal;
    color: #666;
    margin-bottom: 1.5rem;
  }
  .episode-list {
    list-style: none;
    padding: 0;
  }
  .episode-list li {
    border-bottom: 1px dashed #eee;
  }
  .episode-list a {
    display: block;
    padding: 1rem 0;
    text-decoration: none;
  }
  .episode-list a:hover .title {
    text-decoration: underline;
  }

  .episode-info-container {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    width: 100%;
  }

  .episode-main {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }
  .episode-main .title {
    font-size: 1.1rem;
    font-weight: bold;
    display: flex;
    align-items: center;
    color: var(--link-color);
  }

  .episode-main .title::before {
    content: "";
    display: inline-block;
    width: 4px;
    height: 1.2rem;
    background-color: var(--accent-color);
    margin-right: 1rem;
    border-radius: 2px;
    opacity: 0.5;
  }

  .episode-details {
    display: flex;
    gap: 1rem;
    align-items: baseline;
    font-size: 0.85rem;
    color: #777;
  }
  .word-count {
    flex-shrink: 0;
    white-space: nowrap;
  }
  .episode-description {
    line-height: 1.4;
  }

  .badge-updated {
    font-size: 0.7rem;
    font-weight: bold;
    color: #fff;
    background-color: #d4a017;
    padding: 1px 6px;
    border-radius: 2px;
    margin-left: 0.8rem;
  }

  /* --- スマホ表示調整 (768px以下) --- */
  @media (max-width: 768px) {
    .work-date {
      flex-basis: 100%;
      margin-top: 0.2rem;
    }

    .episode-info-container {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.3rem;
    }
    .episode-details {
      flex-direction: column;
      gap: 0.2rem;
      padding-left: 1.4rem;
    }
  }

  /* 短編表示時のフッター調整用 */
  /* NovelViewerを使っている場合、Layout側でpaddingが必要 */
  :global(.site-footer) {
    padding-bottom: 6rem !important;
  }

  /* 本文エリアの幅制限 */
  .short-story-wrapper {
    max-width: 700px;
    margin: 0 auto;
    padding-top: 2rem;
  }
</style>
