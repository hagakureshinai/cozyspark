---
// src/pages/policy.astro
import { Markdown } from 'astro:components';
import PolicyContent from '../content/policy/index.md';
---

<div class="content-area">
    <PolicyContent />
</div>

<style>
/* ポリシーページ用のシンプルなスタイル調整 */
.content-area {
    max-width: 700px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
}
.content-area h1 {
    font-size: 1.8rem;
    font-weight: normal;
    border-bottom: 1px solid var(--accent-color);
    padding-bottom: 0.5rem;
    margin-top: 1rem;
}
.content-area h2 {
    font-size: 1.2rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
}
</style>